<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SupplierRequestsApp.Presentation.Pages.Order.OrdersPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1" Padding="10" BackgroundColor="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Text="ID заказа" FontAttributes="Bold" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Label Text="Дата создания" FontAttributes="Bold" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Label Text="Статус доставки" FontAttributes="Bold" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Label Text="Статус оплаты" FontAttributes="Bold" Grid.Column="3" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Label Text="Действия" FontAttributes="Bold" Grid.Column="4" HorizontalOptions="End" VerticalOptions="Center"/>
            </Grid>

            <CollectionView x:Name="OrdersCollectionView"
                            ItemsSource="{Binding Orders}"
                            Grid.Row="2">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Grid Padding="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label Text="{Binding Id}" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center"/>
                                <Label Text="{Binding DateCreated}" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center"/>
                                <Label Text="{Binding DeliveryStatus}" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center"/>
                                <Label Text="{Binding PayStatus}" Grid.Column="3" HorizontalOptions="Center" VerticalOptions="Center"/>
                                <Button Text="X" 
                                        Grid.Column="4" 
                                        BackgroundColor="DarkRed" 
                                        TextColor="White" 
                                        HorizontalOptions="End" 
                                        VerticalOptions="Center" 
                                        Clicked="OnRemoveClicked" 
                                        CommandParameter="{Binding}" />
                            </Grid>
                            <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="0,5,0,5"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Добавить заказ"
                    Clicked="OnAddNewOrderClicked"
                    VerticalOptions="End"
                    Grid.Row="3" />
        </Grid>
    </ContentPage.Content>
</ContentPage>
