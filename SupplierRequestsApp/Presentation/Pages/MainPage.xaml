<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SupplierRequestsApp.Presentation.Pages.MainPage"
             Title="Главная">
    <StackLayout
        Padding="20"
        Spacing="20"
        MaximumWidthRequest="750">
        <Button Text="Склады"
                Clicked="OnStoragesPageClicked" 
                VerticalOptions="Center"/>
        <Button Text="Заказы"
                Clicked="OnOrdersPageClicked" 
                VerticalOptions="Center"/>
        <Button Text="Поставщики"
                Clicked="OnSupplierPageClicked" 
                VerticalOptions="Center"/>
    </StackLayout>

</ContentPage>
