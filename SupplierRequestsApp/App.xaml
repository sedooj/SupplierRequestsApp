<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SupplierRequestsApp"
             xmlns:converters="clr-namespace:SupplierRequestsApp.Util.Converters"
             x:Class="SupplierRequestsApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary>
                <converters:ShelfDisplayConverter x:Key="ShelfDisplayConverter" />
            </ResourceDictionary>
        </ResourceDictionary>
    </Application.Resources>
</Application>
